{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "target": "es2020",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "typeRoots": [ "./types", "./node_modules/@types" ]
  },
  "include": [
    "src/**/*"
  ]
}
